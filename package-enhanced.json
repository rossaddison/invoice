{
  "name": "yii3-i",
  "version": "1.0.0",
  "description": "Yii3 Invoice",
  "type": "module",
  "dependencies": {
    "bootstrap": "^5.3.8",
    "govuk-frontend": "^5.13.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.0.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "jest": "^30.2.0",
    "npm-check-updates": "^17.0.0",
    "jscodeshift": "^17.0.0",
    "backstop": "^6.3.0",
    "prettier": "^3.0.0",
    "typescript": "^5.9.3",
    "complexity-report": "^2.0.0",
    "depcheck": "^1.4.7"
  },
  "scripts": {
    "build": "npm run build:prod",
    "build:dev": "esbuild src/typescript/index.ts --bundle --outfile=src/Invoice/Asset/rebuild/js/invoice-typescript-iife.js --target=es2020 --format=iife --global-name=InvoiceApp --sourcemap",
    "build:prod": "esbuild src/typescript/index.ts --bundle --outfile=src/Invoice/Asset/rebuild/js/invoice-typescript-iife.js --target=es2020 --format=iife --global-name=InvoiceApp --minify",
    "build:watch": "npm run build:dev -- --watch",
    "build-typescript": "npm run build:prod",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint src/typescript/**/*.ts",
    "lint:fix": "eslint src/typescript/**/*.ts --fix",
    "format": "prettier --write src/typescript/**/*.ts",
    "format:check": "prettier --check src/typescript/**/*.ts",
    "dev": "npm run build:watch",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "test": "jest",
    "upgrade:check": "ncu --target minor",
    "upgrade:safe": "ncu --target patch -u && npm install",
    "upgrade:minor": "ncu --target minor -u && npm install && npm test",
    "upgrade:major": "ncu --target major -i",
    "analyze:deprecations": "eslint src/typescript/**/*.ts --no-fix --format json | node scripts/analyze-deprecations.js",
    "analyze:complexity": "complexity-report --format json src/typescript/**/*.ts > reports/complexity.json",
    "analyze:dependencies": "depcheck --json > reports/dependencies.json",
    "migrate:jquery": "jscodeshift -t scripts/transforms/jquery-to-vanilla.js src/Invoice/Asset/rebuild/js/",
    "test:visual": "backstop test",
    "test:visual:approve": "backstop approve",
    "test:migration": "jest tests/migration.test.ts",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:test": "docker-compose -f docker-compose.dev.yml run --rm invoice-dev npm test",
    "generate:docs": "typedoc src/typescript/ --out docs/api",
    "precommit": "npm run check && npm run test:migration"
  },
  "license": "BSD-3-Clause"
}