# Environment Configuration for Prometheus Integration

# Add these environment variables to your .env file for Prometheus configuration

# Prometheus Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_STORAGE_TYPE=memory

# For production, use Redis storage for metrics persistence
# PROMETHEUS_STORAGE_TYPE=redis
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379
# REDIS_TIMEOUT=0.1
# REDIS_READ_TIMEOUT=10
# REDIS_PERSISTENT=false

# For shared hosting or when Redis is not available, use APCu
# PROMETHEUS_STORAGE_TYPE=apcu

# Application Information (used in build_info metric)
APP_VERSION=1.0.0
APP_ENVIRONMENT=development

# Monitoring Endpoints (for health checks)
NODE_EXPORTER_URL=http://localhost:9100/metrics
WINDOWS_EXPORTER_URL=http://localhost:9182/metrics
GRAFANA_URL=http://localhost:3000

# Business Metrics Configuration
COLLECT_REVENUE_METRICS=true
COLLECT_USER_METRICS=true
COLLECT_PRODUCT_METRICS=true
COLLECT_INVOICE_METRICS=true

# System Metrics Configuration  
COLLECT_PHP_METRICS=true
COLLECT_DATABASE_METRICS=true
COLLECT_FILE_METRICS=true

# Windows-specific Configuration (only used on Windows systems)
WINDOWS_SERVICES_TO_MONITOR=mysql,apache,redis,iis