{
  "name": "yii3-i",
  "version": "1.0.0",
  "description": "Yii3 Invoice",
  "type": "module",
  "dependencies": {
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "bs5-lightbox": "^1.8.5",
    "clipboard": "^2.0.11",
    "govuk-frontend": "^6.0.0-beta.1",
    "rxjs": "^7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "^0.16.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.1.1",
    "@angular-eslint/builder": "^21.1.0",
    "@angular-eslint/eslint-plugin": "^21.1.0",
    "@angular-eslint/eslint-plugin-template": "^21.1.0",
    "@angular-eslint/schematics": "^21.1.0",
    "@angular-eslint/template-parser": "^21.1.0",
    "@angular/cli": "^21.1.1",
    "@angular/common": "^21.1.1",
    "@angular/compiler-cli": "^21.1.1",
    "@angular/core": "^21.1.1",
    "@angular/platform-browser": "^21.1.1",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@typescript/native-preview": "^7.0.0-dev.20260122.4",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-check-updates": "^19.3.1",
    "prettier": "^4.0.0-alpha.13",
    "typedoc": "^0.28.16",
    "vitepress": "^2.0.0-alpha.15"
  },
  "scripts": {
    "//": "=== IMPORTANT WARNING ===",
    "//preinstall": "âš ï¸  WARNING: Do not run 'npm install' without reviewing Angular setup! This may conflict with legacy TypeScript configuration.",
    "//info": "ðŸ“ Use 'npx ng new' for fresh Angular projects or 'npx ng add' to add Angular to existing projects",
    "//migration": "ðŸ”„ This setup integrates Angular with existing Yii3 TypeScript. Review tsconfig.json and angular.json before installing.",
    "build": "npm run build:all",
    "build:all": "npm run build:typescript && npm run build:angular",
    "build:typescript": "npm run build:typescript:prod",
    "build:typescript:dev": "esbuild src/typescript/index.ts --bundle --outfile=src/Invoice/Asset/rebuild/js/invoice-typescript-iife.js --target=es2024 --format=iife --global-name=InvoiceApp --sourcemap",
    "build:typescript:prod": "esbuild src/typescript/index.ts --bundle --outfile=src/Invoice/Asset/rebuild/js/invoice-typescript-iife.js --target=es2024 --format=iife --global-name=InvoiceApp --minify",
    "build:typescript:watch": "npm run build:typescript:dev -- --watch",
    "build:angular": "ng build --configuration production",
    "build:angular:dev": "ng build",
    "build:dev": "npm run build:typescript:dev && npm run build:angular:dev",
    "build:prod": "npm run build:typescript:prod && npm run build:angular",
    "build:watch": "npm run build:typescript:watch",
    "ng": "ng",
    "ng:build": "ng build",
    "ng:serve": "ng serve",
    "ng:test": "ng test",
    "ng:lint": "ng lint",
    "angular:setup": "npx ng add @angular/pwa && npx ng add @angular/material",
    "angular:generate-component": "ng generate component",
    "angular:generate-service": "ng generate service",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint src/typescript/**/*.ts",
    "lint:fix": "eslint src/typescript/**/*.ts --fix",
    "lint:angular": "ng lint",
    "format": "prettier --write src/typescript/**/*.ts",
    "format:check": "prettier --check src/typescript/**/*.ts",
    "dev": "npm run build:watch",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "upgrade:check": "npx ncu --target minor",
    "upgrade:safe": "npx ncu --target patch -u && npm install",
    "upgrade:minor": "npx ncu --target minor -u && npm install",
    "upgrade:major": "npx ncu --target greatest -i",
    "generate:docs": "typedoc src/typescript/ --out docs/api",
    "clean": "rm -rf src/Invoice/Asset/rebuild/js/invoice-typescript-iife.js*",
    "clean:angular": "rm -rf dist/ && rm -rf .angular/",
    "es2024:verify": "node -e \"console.log('ES2024 features available:', Object.hasOwn({}, 'test'), Array.prototype.toSorted ? 'toSorted' : 'missing', Object.groupBy ? 'groupBy' : 'missing', Promise.withResolvers ? 'withResolvers' : 'missing')\"",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "license": "BSD-3-Clause",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "overrides": {
    "@typescript-eslint/utils": {
      "typescript": "*"
    },
    "@typescript-eslint/types": {
      "typescript": "*"
    },
    "@typescript-eslint/typescript-estree": {
      "typescript": "*"
    }
  },
  "keywords": [
    "yii3",
    "invoice",
    "typescript",
    "es2024",
    "bootstrap5",
    "govuk-frontend"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rossaddison/invoice.git"
  },
  "bugs": {
    "url": "https://github.com/rossaddison/invoice/issues"
  },
  "homepage": "https://github.com/rossaddison/invoice#readme"
}